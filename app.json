{
  "expo": {
    "name": "Smart Honey",
    "slug": "smart-honey-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFA500"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.webmaxdigital.smarthoney"
    },
    "scheme": "smarthoney",
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFA500"
      },
      "package": "com.webmaxdigital.smarthoney",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_SPECIAL_USE",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "versionCode": 1,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "smart.app.webmaxdigital.com",
              "pathPrefix": "/accept-invite"
            },
            {
              "scheme": "https",
              "host": "smart.app.webmaxdigital.com",
              "pathPrefix": "/reset-password"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Smart Honey precisa acessar o microfone para gravar suas despesas por áudio."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Smart Honey usa sua localização para identificar estabelecimentos próximos e facilitar o registro de despesas.",
          "locationWhenInUsePermission": "Smart Honey usa sua localização para identificar estabelecimentos próximos e facilitar o registro de despesas."
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#FFA500",
          "androidMode": "default",
          "androidCollapsedTitle": "Smart Honey"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "19d3e484-357c-4df8-bf34-95c558d2e502"
      }
    }
  }
}
